<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0D0D0">

    <TextView
        android:id="@+id/tv_v_cc_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="username"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_cc_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Lastname"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_cc_firstname"
        app:layout_constraintStart_toEndOf="@+id/tv_v_cc_firstname" />

    <TextView
        android:id="@+id/tv_v_cc_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:text="Firstname"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_v_cc_username"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_cc_username" />

</androidx.constraintlayout.widget.ConstraintLayout>