<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0D0D0">

    <TextView
        android:id="@+id/tv_v_cc_search_gpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="GPA"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/gpatitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_cc_search_email" />

    <TextView
        android:id="@+id/tv_v_cc_search_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="age"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/agetitle"
        app:layout_constraintTop_toTopOf="@+id/gpatitle" />

    <TextView
        android:id="@+id/gpatitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA:"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_cc_search_gpa"
        app:layout_constraintStart_toStartOf="@+id/tv_v_cc_search_email" />

    <TextView
        android:id="@+id/agetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:text="Age:"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_cc_search_age"
        app:layout_constraintStart_toEndOf="@+id/tv_v_cc_search_lastname" />

    <TextView
        android:id="@+id/tv_v_cc_search_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="Major"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_cc_search_gpa"
        app:layout_constraintStart_toEndOf="@+id/tv_v_cc_search_gpa" />

    <TextView
        android:id="@+id/tv_v_cc_search_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="email"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_v_cc_search_age"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_cc_search_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Firstname"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_cc_search_lastname"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_v_cc_search_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="Lastname"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/agetitle"
        app:layout_constraintStart_toEndOf="@+id/tv_v_cc_search_firstname" />

    <TextView
        android:id="@+id/tv_v_cc_search_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="username"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>